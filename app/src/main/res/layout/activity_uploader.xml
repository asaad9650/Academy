<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploaderActivity">


    <TextView
        android:id="@+id/txt_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Your Video"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        />


    <EditText
        android:singleLine="true"
        android:id="@+id/et_course_name"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Course name"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:textSize="12dp"
        android:inputType="textCapSentences"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <EditText
        android:singleLine="true"
        android:id="@+id/et_video_name"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="textCapSentences"
        android:textSize="12dp"
        android:hint="Video Title"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <EditText
        android:singleLine="true"
        android:id="@+id/et_video_description"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:background="@drawable/edit"
        android:padding="10dp"
        android:inputType="textCapSentences"
        android:hint="Add your Description here"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <Button
        android:id="@+id/btn_select_file"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="Select File"
        android:padding="10dp"
        android:layout_below="@+id/et_video_description"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:visibility="visible"
        android:background="@drawable/button"
        />
    <TextView
        android:id="@+id/txt_file_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_select_file"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:inputType="textCapSentences"
        android:textColor="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/txt_file_details"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:text="Upload"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@drawable/button"
        android:visibility="visible"
        />
    <ProgressBar
        android:id="@+id/pg_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/button_nav"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff">

    </com.google.android.material.bottomnavigation.BottomNavigationView>






</RelativeLayout>