<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">




        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logoo"
            android:layout_gravity="center"
            ></ImageView>

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to TBD Academy"
            android:textColor="#123288"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15dp"
            />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="someone@example.com"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit"
            android:padding="7dp"
            android:textSize="13dp"
            android:textColorHint="#123288"
            >

        </EditText>

        <EditText
            android:textSize="13dp"
            android:id="@+id/et_login_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="passsword"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:padding="7dp"
            android:textColorHint="#123288"
            >

        </EditText>





        <TextView
            android:id="@+id/txt_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#123288"
            android:layout_gravity="right"
            android:textSize="15dp"
            android:clickable="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="login"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            ></Button>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnSignIn_facebook"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnSignIn_google"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            ></com.google.android.gms.common.SignInButton>

        <TextView

            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account? SignUp now"
            android:textColor="#123288"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            />











    </LinearLayout>

</LinearLayout>