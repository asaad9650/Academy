<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complete_registration">


    <TextView
        android:id="@+id/txt_complete_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete your registration"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="19sp"
        android:textColor="@color/colorPrimaryDark"
        />


    <EditText
        android:singleLine="true"
        android:id="@+id/et_uploader_name"
        android:layout_below="@+id/txt_complete_details"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:layout_marginRight="15dp"
        android:hint="user name"
        android:textColorHint="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/txt_view_user_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_uploader_name"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_confirm_pass_email"
        android:layout_centerHorizontal="true"
        android:text="Please confirm email and password to continue"
        android:layout_below="@id/txt_view_user_check"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:id="@+id/et_uploader_cnf_email"
        android:layout_below="@+id/txt_confirm_pass_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Email"
        android:textSize="12dp"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <EditText
        android:singleLine="true"
        android:id="@+id/et_uploader_cnf_pass"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_uploader_cnf_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/et_uploader_cnf_pass"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true"
        android:text="Proceed"
        android:textColor="#fff"
        android:textSize="15dp"
        android:background="@drawable/button"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_proceed"
        android:layout_marginTop="20dp"
        />
    <ProgressBar
        android:id="@+id/pg_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />




</RelativeLayout>