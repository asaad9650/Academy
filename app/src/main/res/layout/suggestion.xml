<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/suggestion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/suggestion_video_img"
        android:layout_width="170dp"
        android:layout_height="140dp">
    </ImageView>

    <TextView
        android:textColor="#000"
        android:id="@+id/suggestion_video_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/suggestion_video_img"
        />

    <TextView
        android:id="@+id/suggestion_uploader_name"
        android:layout_below="@+id/suggestion_video_title"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploader name"
        android:layout_toRightOf="@+id/suggestion_video_img"
        />
    <TextView
        android:id="@+id/suggestion_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Date time"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/suggestion_uploader_name"
        android:layout_toRightOf="@+id/suggestion_video_img"
        />

</RelativeLayout>