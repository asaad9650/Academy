<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/subscribed_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:id="@+id/subscribed_video_img"
                android:background="#000"/>
            <TextView
                android:id="@+id/subscribed_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/subscribed_video_img"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="Video Title"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/subscribed_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/subscribed_video_img"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/subscribed_video_title"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Course Name"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/subscribed_uploader_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/subscribed_course_name"
                android:layout_toRightOf="@id/subscribed_video_img"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Uploader Name"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>