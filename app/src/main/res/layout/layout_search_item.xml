<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_layout">
    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/frame_img"
        android:background="#000">
        <ImageView
            android:id="@+id/search_img"
            android:layout_margin="0dp"
            android:layout_width="150dp"
            android:layout_height="120dp"/>
    </FrameLayout>

        <TextView
            android:text="Video Title"
            android:id="@+id/search_vid_title"
            android:layout_marginTop="9dp"
            android:textColor="#000"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frame_img"/>
        <TextView
            android:text="Course Name"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/search_course_name"
            android:layout_below="@+id/search_vid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frame_img"/>

        <TextView
            android:text="Uploader Name"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:id="@+id/search_uploader_name"
            android:layout_below="@+id/search_course_name"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frame_img"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>